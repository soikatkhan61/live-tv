<%- include('./partials/header/head') %>

    <div class="container-fluid py-md-4 shadow-sm" style="background-color:#F2F4F8 ;min-height:100vh">
        <div class="container pb-4 rounded" >
            <div class="row p-3">
                <div class="col-sm-12 col-md-6 col-lg-3 border d-none d-lg-block">
                    <div class="ad">
                        <p class="text-center pb-0 mt-1 fw-bold">Sponsored</p>
                        <div class="swiper mySwiper">
                            <div class="swiper-wrapper">
                              <% if(ad.length > 0){ %>
                                <% for(a of ad){ %>
                                  <div class="swiper-slide">
                                    <img src="<%= a.ad_image %> " />
                                  </div> 
                                <% } %> 
                              <% } %> 
                            </div>
                            <div class="swiper-pagination"></div>
                          </div>
                          <div class="d-flex justify-content-center">
                            <a href="/contact" class="btn border">Contact For Ad</a>
                          </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-8 col-lg-6 d-flex justify-content-center align-items-center">
                    <!-- HTML -->
                    <video id='hls-example' class="video-js vjs-default-skin" width="650"
                        style="height: 500px!important;width: 100%!important;" controls>
                        <source type="application/x-mpegURL" src="https://edge4.bioscopelive.com/hls/anonymous/O_deZbSaftvQVBV96ivmcA/1667763526/colors_bangla_mid/index.m3u8">
                    </video>
                </div>
                <div class="col-sm-12 col-md-4 col-lg-3 border p-2 d-none d-lg-block">
                    <div class="ad">
                        <p class="text-center pb-0 mt-1 fw-bold">Sponsored</p>
                        <div class="swiper mySwiper">
                            <div class="swiper-wrapper">
                              <% if(ad.length > 0){ %>
                                <% for(a of ad){ %>
                                  <div class="swiper-slide">
                                    <img src="<%= a.ad_image %> " />
                                  </div> 
                                <% } %> 
                              <% } %> 
                            </div>
                            <div class="swiper-pagination"></div>
                          </div>

                          <div class="d-flex justify-content-center">
                            <a href="/contact" class="btn">Contact For Ad</a>
                          </div>
                    </div>
                </div>
            </div>

            <div>
                <div class="row">
                    <% if(featured.length > 0){ %> 
                      <h5>Featured Channel</h5>
                        <% for(let t of featured){ %> 
                          <div class="col-4 col-md-3 col-lg-2">
                            <div class="content-grid-block">
                              <div class="content-item-container">
                                <div class="item">
                                    <a href="/live-tv/<%= t.slug %> ">
                                        <div class="image-wrapper">
                                          <div class="content-badge live-tv">
                                            <span class="prime <%= t.paid == 'Free' ? 'd-none' : '' %>">prime</span>
                                          </div>
  
                                          <div class="image-block">
                                            <img src="<%= t.thumbnails ? t.thumbnails : '/images/no_prev.jpg' %> " class="img-responsive b-lazy img-livetv b-loaded" alt="">
                                          </div>
                                        </div>
        
                                        <div class="channel-title-block mt-2">
                                            <h5 class="content-title single-line-clamp text-dark"><%= t.channel_name %> </h5>
                                        </div>
                                    </a>
                                </div>
                            </div>
                             </div>
                          </div>
                          
                        <% } %> 
                    <% } %> 
                </div>
            </div>

            <div class="tv-card mt-3">
              <% if(cat.length == 0){ %> 
                <h5>No Category</h5>
              <% }else{ %> 
                <% for (let c of cat){ %> 
                  <h5><%= c %> </h5>
                  <hr>
                  <div class="row">
                  <% for (let t of tv){ %> 
                   <% if(t.category === c){ %> 
                    <div class="col-4 col-md-3 col-lg-2">
                      <div class="content-grid-block">
                        <div class="content-item-container">
                          <div class="item">
                              <a href="/live-tv/<%= t.slug %> ">
                                  <div class="image-wrapper">
                                    <div class="content-badge live-tv">
                                      <span class="prime <%= t.paid == 'Free' ? 'd-none' : '' %> ">prime</span>
                                    </div>

                                    <div class="image-block">
                                      <img src="<%= t.thumbnails ? t.thumbnails : '/images/no_prev.jpg' %> " class="img-responsive b-lazy img-livetv b-loaded" alt="">
                                    </div>
                                  </div>
  
                                  <div class="channel-title-block mt-2">
                                      <h5 class="content-title single-line-clamp text-dark"><%= t.channel_name %> </h5>
                                  </div>
                              </a>
                          </div>
                      </div>
                       </div>
                    </div>
                   <% } %> 
                  <% } %> 
                </div>
                <% }%> 
              <% }%> 
            </div>
        </div>
    </div>



 <!-- JS code -->
                    <!-- If you'd like to support IE8 (for Video.js versions prior to v7) -->
                    <script src="https://vjs.zencdn.net/ie8/ie8-version/videojs-ie8.min.js"></script>
                    <script
                        src="https://cdnjs.cloudflare.com/ajax/libs/videojs-contrib-hls/5.14.1/videojs-contrib-hls.js"></script>
                    <script src="https://vjs.zencdn.net/7.2.3/video.js"></script>

                    <script>
                        var player = videojs('hls-example');
                        player.play();
                    </script>
    <%- include('./partials/footer') %>