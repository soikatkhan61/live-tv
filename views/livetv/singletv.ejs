<%- include('../partials/header/head') %>

    <div class="container-fluid py-md-4 shadow-sm" style="background-color:#F2F4F8;min-height:100vh">
        <div class="container pb-4 rounded" style="background-color: rgb(255, 255, 255);">
            <div class="row p-3">
                <div class="col-sm-12 col-md-4 col-lg-3 border p-2 d-none d-lg-block">
                    <div class="ad">
                        <p class="text-center pb-0 mt-1 fw-bold">Sponsored</p>
                        <div class="swiper mySwiper">
                            <div class="swiper-wrapper">
                              <% if(ad.length > 0){ %>
                                <% for(a of ad){ %>
                                  <div class="swiper-slide">
                                    <img src="<%= a.ad_image %> " />
                                  </div> 
                                <% } %> 
                              <% } %> 
                            </div>
                            <div class="swiper-pagination"></div>
                          </div>

                          <div class="d-flex justify-content-center">
                            <a href="/contact" class="btn">Contact For Ad</a>
                          </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-8 col-lg-6 d-flex justify-content-center align-items-center">
                    <% if(single_tv[0].youtube == 'on'){ %> 
                     <%- single_tv[0].youtube_link %> 
                    <% }else{ %> 
                    <video-js id='hls-example' class="video-js vjs-big-play-centered vjs-theme-fantasy" width="650"
                        style="min-height: 500px!important;width: 100%!important;" controls data-setup='{"html5": {"vhs": 
                        {"overrideNative": true}, "nativeAudioTracks": false, "nativeVideoTracks": false}}'>
                        <source type="application/x-mpegURL" src="<%= single_tv[0].link %>">
                        <p class="vjs-no-js">
                          To view this video please enable JavaScript, and consider upgrading to a
                          web browser that
                          <a href="https://videojs.com/html5-video-support/" target="_blank"
                            >supports HTML5 video</a
                          >
                        </p>
                    </video-js>
                    <% } %> 
                </div>

                
                <div class="col-sm-12 col-md-4 col-lg-3 border p-2 d-none d-lg-block">
                    <div class="ad">
                        <p class="text-center pb-0 mt-1 fw-bold">Sponsored</p>
                        <div class="swiper mySwiper">
                            <div class="swiper-wrapper">
                              <% if(ad.length > 0){ %>
                                <% for(a of ad){ %>
                                  <div class="swiper-slide">
                                    <img src="<%= a.ad_image %> " />
                                  </div> 
                                <% } %> 
                              <% } %> 
                            </div>
                            <div class="swiper-pagination"></div>
                          </div>

                          <div class="d-flex justify-content-center">
                            <a href="/contact" class="btn">Contact For Ad</a>
                          </div>
                    </div>
                </div>
            </div>

            <div>
              <div class="row">
                <% if(featured.length > 0){ %> 
                  <h5>Featured Channel</h5>
                    <% for(let t of featured){ %> 
                      <div class="col-4 col-md-3 col-lg-2">
                        <div class="content-grid-block">
                          <div class="content-item-container">
                            <div class="item">
                                <a href="/live-tv/<%= t.slug %> ">
                                    <div class="image-wrapper">
                                      <div class="content-badge live-tv">
                                        <span class="prime <%= t.paid == 'Free' ? 'd-none' : '' %>"  >prime</span>
                                      </div>

                                      <div class="image-block">
                                        <img src="<%= t.thumbnails ? t.thumbnails : '/images/no_prev.jpg' %> " class="img-responsive b-lazy img-livetv b-loaded" alt="">
                                      </div>
                                    </div>
    
                                    <div class="channel-title-block mt-2">
                                        <h5 class="content-title single-line-clamp text-dark"><%= t.channel_name %> </h5>
                                    </div>
                                </a>
                            </div>
                        </div>
                         </div>
                      </div>
                      
                    <% } %> 
                <% } %> 
            </div>
          </div>

          <div class="tv-card mt-3">
            <% if(cat.length == 0){ %> 
              <h5>No Category</h5>
            <% }else{ %> 
              <% for (let c of cat){ %> 
                <h5><%= c ? c : 'ISP TV Special' %> </h5>
                <hr>
                <div class="row">
                <% for (let t of tv){ %> 
                 <% if(t.category === c){ %> 
                  <div class="col-4 col-md-3 col-lg-2">
                    <div class="content-grid-block">
                      <div class="content-item-container">
                        <div class="item">
                            <a href="/live-tv/<%= t.slug %> ">
                                <div class="image-wrapper">
                                  <div class="content-badge live-tv">
                                    <% if(t.paid == 'Free' || t.youtube == 'on'){ %>
                                      <% if(t.youtube == 'on'){ %>  
                                        <span class="prime" style="background: green!important;;">Youtube</span>
                                      <% }else{ %> 
                                        <span class="prime" >prime</span> 
                                      <% } %>  
                                      
                                    <% } %> 
                                  
                                  </div>

                                  <div class="image-block">
                                    <img src="<%= t.thumbnails ? t.thumbnails : '/images/no_prev.jpg' %> " class="img-responsive b-lazy img-livetv b-loaded" alt="">
                                  </div>
                                </div>

                                <div class="channel-title-block mt-2">
                                    <h5 class="content-title single-line-clamp text-dark"><%= t.channel_name %> </h5>
                                </div>
                            </a>
                        </div>
                    </div>
                     </div>
                  </div>
                 <% } %> 
                <% } %> 
              </div>
              <% }%> 
            <% }%> 
          </div>
        </div>
    </div>



 <!-- JS code -->
