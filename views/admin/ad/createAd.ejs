<%- include('../partials/header.ejs') %>
    <div class="container-fluid py-3">
        <div class="container">
            <h4 class="text-center mb-5 text-dark fst-italic fw-bold">Create an ad </h4>
            <a href="/admin-ad/get-all-ads" class="btn btn-success mb-3">All ads</a>

            <form action="/admin-ad" method="post" enctype="multipart/form-data">

                <div class="row">
                    <div class="col-sm-12 col-md-6">
                        <div class="form-outline mb-4">
                            <input type="text" name="ad_name" id="form7Example1" class="form-control" required />
                            <label class="form-label" for="form7Example1">Ad Name *</label>
                        </div>


                        <div class="form-outline mt-3">
                            <input type="text" name="ad_link" id="form7Example1" class="form-control"  />
                            <label class="form-label" for="form7Example1">Ad link</label>
                        </div>

                        <div class="form-outline mt-3">
                            <input type="number" name="ad_price" id="form7Example1" class="form-control"  />
                            <label class="form-label" for="form7Example1">Ad Price</label>
                        </div>



                        <div class="mt-3">
                            <script>
                                function update() {
                                    var d = document.getElementById('country');
                                    var dText = d.options[d.selectedIndex].text;
                                    document.getElementById('category').value = dText
                                }
                            </script>
                            <select id="country" class="py-2 px-4" onchange="update();"
                                style="width: 100%; outline: black">
                                <option class="py-2 px-5">Payment Status *</option>
                                <option class="py-2 px-5" value="Paid">Paid</option>
                                <option class="py-2 px-5" value="Due">Due</option>
                            </select>
                            <input id="category" name="payment_status" value="" class="d-none">
                        </div>

                        <div class="form-outline mt-3">
                            <input type="number" name="validity" id="form7Example1" class="form-control" required />
                            <label class="form-label" for="form7Example1">Validity (in days)</label>
                        </div>

                        <div class="form-outline mt-3">
                            <input type="text" name="providor_num" id="form7Example1" class="form-control" />
                            <label class="form-label" for="form7Example1">Provider Phone No</label>
                        </div>

                    </div>

                    <div class="col-sm-12 col-md-6">
                        <div>

                            <input accept="image/*" type="file" name="ad_image" class="form-control" id="customFile"
                                required />

                            <div class="mt-3">
                                <img id="blah" class="img thumbnail border" src="/images/no_prev.jpg"
                                    alt="Channel thumbnail" height="300" width="300" />
                            </div>
                        </div>

                        <script>
                            customFile.onchange = evt => {
                                const [file] = customFile.files
                                if (file) {
                                    blah.src = URL.createObjectURL(file)
                                }
                            }
                        </script>
                    </div>
                </div>


                <button type="submit" class="btn btn-primary btn-sm-block mt-5">Create</button>

            </form>
        </div>
    </div>
    <%- include('../partials/footer.ejs') %>
        </body>

        </html>