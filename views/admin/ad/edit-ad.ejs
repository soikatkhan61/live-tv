<%- include('../partials/header.ejs') %>
    <div class="container-fluid py-3">
        <div class="container">
            <h4 class="text-center mb-5 text-dark fst-italic fw-bold">Edit an ad </h4>
            <% if(ad.length==0) {%> 
                <p>No Data Found</p>
            <% }else{ %> 
                <form action="/admin-ad/edit" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <input class="d-none" type="text" name="ad_id" value="<%= ad.id %>">
                            <div class="form-outline mb-4">
                                
                                <input  type="text" name="ad_name" id="form7Example1" class="form-control" value="<%= ad.ad_name %>" required />
                                <label class="form-label" for="form7Example1">Ad Name *</label>
                            </div>
    
    
                            <div class="form-outline mt-3">
                                <input type="text" value="<%= ad.ad_link %>" name="ad_link" id="form7Example1" class="form-control"  />
                                <label class="form-label" for="form7Example1">Ad link</label>
                            </div>
    
                            <div class="form-outline mt-3">
                                <input type="number" value="<%= ad.ad_price %>" name="ad_price" id="form7Example1" class="form-control"  />
                                <label class="form-label" for="form7Example1">Ad Price</label>
                            </div>
    
    
    
                            <div class="mt-3">
                                <script>
                                    function update() {
                                        var d = document.getElementById('country');
                                        var dText = d.options[d.selectedIndex].text;
                                        document.getElementById('category').value = dText
                                    }
                                </script>
                                <select id="country" class="py-2 px-4" onchange="update();"
                                    style="width: 100%; outline: black">
                                    <option class="py-2 px-5">Payment Status *</option>
                                    <option class="py-2 px-5" value="Paid" <%= ad.payment_status == 'Paid' ? 'selected' : '' %> >Paid</option>
                                    <option class="py-2 px-5" value="Due" <%= ad.payment_status == 'Due' ? 'selected' : '' %>>Due</option>
                                </select>
                                <input id="category" name="payment_status" value="<%= ad.payment_status %>" class="d-none">
                            </div>
    
                            <div class="form-outline mt-3">
                                <input type="number" value="<%= ad.validity %>" name="validity" id="form7Example1" class="form-control" required />
                                <label class="form-label" for="form7Example1">Validity (in days)</label>
                            </div>
    
                            <div class="form-outline mt-3">
                                <input type="text" value="<%= ad.providor_num %>" name="providor_num" id="form7Example1" class="form-control" />
                                <label class="form-label" for="form7Example1">Provider Phone No</label>
                            </div>
    
                        </div>
    
                        <div class="col-sm-12 col-md-6">
                            <div>
    
                                <input accept="image/*" type="file" name="ad_image" class="form-control" id="customFile"
                                     />
    
                                <div class="mt-3">
                                    <img id="blah" class="img thumbnail border" src="<%= ad.ad_image %> "
                                        alt="Channel thumbnail" height="300" width="300" />
                                </div>
                            </div>
    
                            <script>
                                customFile.onchange = evt => {
                                    const [file] = customFile.files
                                    if (file) {
                                        blah.src = URL.createObjectURL(file)
                                    }
                                }
                            </script>
                        </div>
                    </div>
    
    
                    <button type="submit" class="btn btn-warning btn-sm-block mt-5">Update Ad</button>
    
                </form>
            <% } %> 
            
        </div>
    </div>
    <%- include('../partials/footer.ejs') %>
        </body>

        </html>